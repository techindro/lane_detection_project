# 2. Load annotation files
with open(f"{DATA_PATH}/labels/lane_annotation.json", 'r') as f:
    annotations = json.load(f)

print(f"\nTotal samples: {len(annotations)}")

# 3. Analyze image statistics
def analyze_images(image_paths):
    heights, widths, channels = [], [], []
    
    for img_path in image_paths[:100]:  # Sample 100 images
        img = cv2.imread(str(img_path))
        if img is not None:
            h, w, c = img.shape
            heights.append(h)
            widths.append(w)
            channels.append(c)
    
    return heights, widths, channels

# 4. Visualize sample images
def visualize_samples(image_paths, n_samples=5):
    fig, axes = plt.subplots(1, n_samples, figsize=(20, 4))
    
    for idx, img_path in enumerate(image_paths[:n_samples]):
        img = cv2.imread(str(img_path))
        img_rgb = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)
        axes[idx].imshow(img_rgb)
        axes[idx].set_title(f"Sample {idx+1}")
        axes[idx].axis('off')
    
    plt.tight_layout()
    plt.savefig(f"{OUTPUT_PATH}/sample_images.png", dpi=300)
    plt.show()

# 5. Lane distribution analysis
def analyze_lane_distribution(annotations):
    lane_counts = []
    
    for ann in annotations:
        lanes = ann['lanes']
        lane_counts.append(len([lane for lane in lanes if any(lane)]))
    
    return lane_counts

